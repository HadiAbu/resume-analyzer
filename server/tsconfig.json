{
  "compilerOptions": {
    "target": "ES2020" /* Modern Node.js support */,
    "module": "CommonJS" /* Standard for Node.js backends */,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true /* Enable all strict type-checking options */,
    "esModuleInterop": true /* Critical for importing pdf-parse and express */,
    "skipLibCheck": true /* Speeds up compilation */,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true /* Allows you to import .json files */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
